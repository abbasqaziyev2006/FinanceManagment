@model Finance.DAL.DataContext.Entities.Invoice
@{
    ViewData["Title"] = "Fakturanı Redaktə Et";
    var clients = ViewBag.Clients as IEnumerable<Finance.DAL.DataContext.Entities.Client>;
}

<div class="page-header">
    <h2 class="fw-bold"><i class="bi bi-pencil"></i> Fakturanı Redaktə Et</h2>
    <p class="text-muted mb-0">Faktura məlumatlarını yeniləyin</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="InvoiceNumber" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ClientId" class="form-label">
                                Müştəri <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ClientId" class="form-select" required>
                                <option value="">Müştəri seçin...</option>
                                @if (clients != null)
                                {
                                    @foreach (var client in clients)
                                    {
                                        <option value="@client.Id" selected="@(client.Id == Model.ClientId)">
                                            @client.Name - @client.Company
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Amount" class="form-label">
                                Məbləğ (₼) <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Amount"
                                   class="form-control"
                                   type="number"
                                   step="0.01"
                                   min="0"
                                   required />
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="IssueDate" class="form-label">
                                Faktura Tarixi <span class="text-danger">*</span>
                            </label>
                            <input asp-for="IssueDate"
                                   class="form-control"
                                   type="date"
                                   required />
                            <span asp-validation-for="IssueDate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DueDate" class="form-label">
                                Son Ödəmə Tarixi <span class="text-danger">*</span>
                            </label>
                            <input asp-for="DueDate"
                                   class="form-control"
                                   type="date"
                                   required />
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Status" class="form-label">
                            Status <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Status" class="form-select" required>
                            <option value="0">Qaralama</option>
                            <option value="1">Göndərilib</option>
                            <option value="2">Ödənilib</option>
                            <option value="3">Gecikib</option>
                            <option value="4">Ləğv edilib</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Yenilə
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Ləğv Et
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="ms-auto">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-outline-danger"
                                    onclick="return confirm('Bu fakturanı silmək istədiyinizdən əminsiniz?')">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                        </form>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h6 class="fw-bold mb-3"><i class="bi bi-file-text"></i> Faktura Məlumatı</h6>
                <div class="small text-muted">
                    <p class="mb-2">
                        <strong>Faktura №:</strong> @Model.InvoiceNumber
                    </p>
                    <p class="mb-2">
                        <strong>Cari Məbləğ:</strong>
                        <span class="fw-bold text-primary">₼@Model.Amount.ToString("N2")</span>
                    </p>
                    <p class="mb-0">
                        <strong>Cari Status:</strong>
                        @switch (Model.Status)
                        {
                            case Finance.DAL.DataContext.Entities.InvoiceStatus.Draft:
                                <span class="badge bg-secondary">Qaralama</span>
                                break;
                            case Finance.DAL.DataContext.Entities.InvoiceStatus.Sent:
                                <span class="badge bg-primary">Göndərilib</span>
                                break;
                            case Finance.DAL.DataContext.Entities.InvoiceStatus.Paid:
                                <span class="badge bg-success">Ödənilib</span>
                                break;
                            case Finance.DAL.DataContext.Entities.InvoiceStatus.Overdue:
                                <span class="badge bg-danger">Gecikib</span>
                                break;
                            case Finance.DAL.DataContext.Entities.InvoiceStatus.Cancelled:
                                <span class="badge bg-dark">Ləğv edilib</span>
                                break;
                        }
                    </p>
                </div>

                <hr class="my-3">

                <h6 class="fw-bold mb-3"><i class="bi bi-info-circle"></i> Qeyd</h6>
                <ul class="small text-muted mb-0">
                    <li class="mb-2">Dəyişikliklər dərhal tətbiq olunacaq</li>
                    <li class="mb-2">Faktura nömrəsi dəyişdirilə bilməz</li>
                    <li class="mb-2">Status dəyişikliyini düzgün seçin</li>
                    <li>Fakturanı silmək üçün sağ aşağıdakı düyməni istifadə edin</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}