@model Finance.DAL.DataContext.Entities.Invoice
@{
    ViewData["Title"] = "Faktura Detalları";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h2 class="fw-bold"><i class="bi bi-file-text"></i> Faktura Detalları</h2>
        <p class="text-muted mb-0">@Model.InvoiceNumber</p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil"></i> Redaktə Et
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <!-- Invoice Card -->
        <div class="card mb-4">
            <div class="card-body p-5">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h4 class="fw-bold text-primary mb-3">💼 FinansApp</h4>
                        <p class="mb-1">Biznes İdarəetmə Sistemi</p>
                        <p class="text-muted small mb-0">Bakı, Azərbaycan</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <h5 class="fw-bold mb-2">FAKTURA</h5>
                        <p class="mb-1"><strong>№:</strong> @Model.InvoiceNumber</p>
                        <p class="mb-1"><strong>Tarix:</strong> @Model.IssueDate.ToString("dd.MM.yyyy")</p>
                        <p class="mb-0"><strong>Son Tarix:</strong> @Model.DueDate.ToString("dd.MM.yyyy")</p>
                    </div>
                </div>

                <hr class="my-4">

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="fw-bold mb-2">Müştəri:</h6>
                        @if (Model.Client != null)
                        {
                            <p class="mb-1 fw-bold">@Model.Client.Name</p>
                            <p class="mb-1">@Model.Client.Company</p>
                            <p class="mb-1 small">@Model.Client.Email</p>
                            <p class="mb-0 small">@Model.Client.Phone</p>
                        }
                        else
                        {
                            <p class="text-muted">Müştəri məlumatı tapılmadı</p>
                        }
                    </div>
                    <div class="col-md-6 text-end">
                        <h6 class="fw-bold mb-2">Status:</h6>
                        <p>
                            @switch (Model.Status)
                            {
                                case Finance.DAL.DataContext.Entities.InvoiceStatus.Draft:
                                    <span class="badge bg-secondary fs-6">Qaralama</span>
                                    break;
                                case Finance.DAL.DataContext.Entities.InvoiceStatus.Sent:
                                    <span class="badge bg-primary fs-6">Göndərilib</span>
                                    break;
                                case Finance.DAL.DataContext.Entities.InvoiceStatus.Paid:
                                    <span class="badge bg-success fs-6">Ödənilib</span>
                                    break;
                                case Finance.DAL.DataContext.Entities.InvoiceStatus.Overdue:
                                    <span class="badge bg-danger fs-6">Gecikib</span>
                                    break;
                                case Finance.DAL.DataContext.Entities.InvoiceStatus.Cancelled:
                                    <span class="badge bg-dark fs-6">Ləğv edilib</span>
                                    break;
                            }
                        </p>
                    </div>
                </div>

                <hr class="my-4">

                @if (Model.Items != null && Model.Items.Any())
                {
                    <table class="table table-borderless mb-4">
                        <thead class="border-bottom">
                            <tr>
                                <th>Təsvir</th>
                                <th class="text-center">Miqdar</th>
                                <th class="text-end">Qiymət</th>
                                <th class="text-end">Məbləğ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Description</td>
                                    <td class="text-center">@item.Quantity</td>
                                    <td class="text-end">₼@item.UnitPrice.ToString("N2")</td>
                                    <td class="text-end fw-bold">₼@item.Total.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

                <div class="row">
                    <div class="col-md-6"></div>
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr class="border-top">
                                <td class="text-end"><strong>Ümumi Məbləğ:</strong></td>
                                <td class="text-end"><h4 class="mb-0 fw-bold text-primary">₼@Model.Amount.ToString("N2")</h4></td>
                            </tr>
                        </table>
                    </div>
                </div>

                <hr class="my-4">

                <div class="text-muted small text-center">
                    <p class="mb-0">Bu faktura FinansApp sistemi tərəfindən yaradılıb</p>
                    <p class="mb-0">Suallarınız üçün: info@finans.az</p>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex gap-2 mb-4">
            <button onclick="window.print()" class="btn btn-primary">
                <i class="bi bi-printer"></i> Çap Et
            </button>
            <button onclick="alert('PDF funksiyası tezliklə əlavə ediləcək')" class="btn btn-outline-primary">
                <i class="bi bi-file-pdf"></i> PDF Yüklə
            </button>
            <button onclick="alert('Email funksiyası tezliklə əlavə ediləcək')" class="btn btn-outline-success">
                <i class="bi bi-envelope"></i> Email Göndər
            </button>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Quick Actions -->
        <div class="card mb-3">
            <div class="card-header bg-white">
                <h6 class="mb-0 fw-bold"><i class="bi bi-lightning"></i> Sürətli Əməliyyatlar</h6>
            </div>
            <div class="card-body">
                @if (Model.Status != Finance.DAL.DataContext.Entities.InvoiceStatus.Paid)
                {
                    <form asp-action="MarkAsPaid" asp-route-id="@Model.Id" method="post" class="mb-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Ödənilmiş Kimi İşarələ
                        </button>
                    </form>
                }

                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100 mb-2">
                    <i class="bi bi-pencil"></i> Redaktə Et
                </a>

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit"
                            class="btn btn-outline-danger w-100"
                            onclick="return confirm('Bu fakturanı silmək istədiyinizdən əminsiniz?')">
                        <i class="bi bi-trash"></i> Sil
                    </button>
                </form>
            </div>
        </div>

        <!-- Timeline -->
        <div class="card">
            <div class="card-header bg-white">
                <h6 class="mb-0 fw-bold"><i class="bi bi-clock-history"></i> Tarixçə</h6>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item mb-3">
                        <i class="bi bi-circle-fill text-primary"></i>
                        <div class="ms-3">
                            <strong>Yaradılıb</strong>
                            <p class="text-muted small mb-0">@Model.IssueDate.ToString("dd.MM.yyyy HH:mm")</p>
                        </div>
                    </div>

                    @if (Model.Status == Finance.DAL.DataContext.Entities.InvoiceStatus.Sent)
                    {
                        <div class="timeline-item mb-3">
                            <i class="bi bi-circle-fill text-info"></i>
                            <div class="ms-3">
                                <strong>Göndərilib</strong>
                                <p class="text-muted small mb-0">Müştəriyə göndərilib</p>
                            </div>
                        </div>
                    }

                    @if (Model.Status == Finance.DAL.DataContext.Entities.InvoiceStatus.Paid)
                    {
                        <div class="timeline-item mb-3">
                            <i class="bi bi-circle-fill text-success"></i>
                            <div class="ms-3">
                                <strong>Ödənilib</strong>
                                <p class="text-muted small mb-0">Ödəniş alınıb</p>
                            </div>
                        </div>
                    }

                    <div class="timeline-item">
                        <i class="bi bi-circle text-muted"></i>
                        <div class="ms-3">
                            <strong>Son Tarix</strong>
                            <p class="text-muted small mb-0">@Model.DueDate.ToString("dd.MM.yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .page-header, .btn, .card:last-child {
            display: none !important;
        }

        .col-md-8 {
            width: 100% !important;
        }
    }

    .timeline-item {
        display: flex;
        align-items: start;
    }
</style>