@model IEnumerable<Finance.DAL.DataContext.Entities.Transaction>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <h2 class="fw-bold"><i class="bi bi-speedometer2"></i> Dashboard</h2>
    <p class="text-muted">Maliyyə vəziyyətinizə ümumi baxış</p>
</div>

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card stat-card income">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1 small">Ümumi Gəlir</p>
                    <h3 class="fw-bold text-success mb-0">₼@ViewBag.TotalIncome.ToString("N2")</h3>
                </div>
                <i class="bi bi-arrow-up-circle text-success" style="font-size: 3em; opacity: 0.3;"></i>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card stat-card expense">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1 small">Ümumi Xərc</p>
                    <h3 class="fw-bold text-danger mb-0">₼@ViewBag.TotalExpenses.ToString("N2")</h3>
                </div>
                <i class="bi bi-arrow-down-circle text-danger" style="font-size: 3em; opacity: 0.3;"></i>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card stat-card balance">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1 small">Balans</p>
                    <h3 class="fw-bold text-primary mb-0">₼@ViewBag.Balance.ToString("N2")</h3>
                </div>
                <i class="bi bi-wallet2 text-primary" style="font-size: 3em; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Recent Transactions -->
<div class="card">
    <div class="card-header bg-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold">Son Əməliyyatlar</h5>
            <a asp-controller="Transactions" asp-action="Index" class="btn btn-sm btn-outline-primary">
                Hamısına bax <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model != null && Model.Any())
        {
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Tarix</th>
                        <th>Təsvir</th>
                        <th>Kateqoriya</th>
                        <th>Növ</th>
                        <th class="text-end">Məbləğ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Date.ToString("dd.MM.yyyy")</td>
                            <td>@item.Description</td>
                            <td><span class="badge bg-secondary">@item.Category</span></td>
                            <td>
                                @if (item.Type == Finance.DAL.DataContext.Entities.TransactionType.Income)
                                {
                                    <span class="badge bg-success">Gəlir</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Xərc</span>
                                }
                            </td>
                            <td class="text-end fw-bold @(item.Type == Finance.DAL.DataContext.Entities.TransactionType.Income ? "text-success" : "text-danger")">
                                @(item.Type == Finance.DAL.DataContext.Entities.TransactionType.Income ? "+" : "-")₼@item.Amount.ToString("N2")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3em; color: #cbd5e1;"></i>
                <p class="text-muted mt-3">Hələ heç bir əməliyyat yoxdur</p>
                <a asp-controller="Transactions" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> İlk əməliyyatı əlavə et
                </a>
            </div>
        }
    </div>
</div>